<h1>Add New Page</h1>

<%= form_tag do %>
    <label>
      Slug:
      <%= text_field_tag('slug', new_page[:slug]) %>
    </label>
    <label>
      Title:
      <%= text_field_tag 'title', new_page[:title] %>
    </label>
    <%= label_tag(:parent, 'Parent') %>
    <%= select_tag(:parent, options_for_select(parents_dropdown_data, 'http://id.ukpds.org/root')) %>
    <%= label_tag(:template, 'Template') %>
    <%= select_tag(:template, options_for_select(templates)) %>
    <label>
      Text:
      <%= text_field_tag 'text', new_page[:text] %>
    </label>

    <%= submit_tag("Add Page") %>
<% end %>