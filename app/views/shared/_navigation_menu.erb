<li>
  <a href="<%= node[:path] %>"><%= node[:slug] == '' ? 'home' : node[:slug] %></a>
  <% unless node[:children].empty? %>
      <ul>
        <% node[:children].each do |child| %>
            <%= render partial: 'shared/navigation_menu', locals: {node: child} %>
        <% end %>
      </ul>
  <% end %>
</li>